    "koa2",
    "knex",
    "docker",
    "ava",
    "boilerplate"
  ],
  "author": "Rafael Jesus <rafaelljesus86@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rafaeljesus/koa-bb/issues"
  },
  "homepage": "https://github.com/rafaeljesus/koa-bb#readme",
  "ava": {
    "babel": {
      "presets": [
        "es2015",
        "stage-2"
      ]
    },
    "files": [
